---
import Nav from "@components/Nav.astro";
---
<div class="relative h-screen w-full">
    <video 
        src="/video/Videoacpropiedades.mp4" 
        autoplay 
        loop
        muted
        preload="none" 
        poster="/images/posterVideo.webp" 
        playsinline
        class="absolute top-0 left-0 w-full h-full object-cover z-0"
    ></video>
    <div class="absolute top-0 left-0 w-full h-full bg-gray-700/70 z-10"></div>
    <main class="grid grid-cols-2 place-items-center h-screen relative z-20 max-lg:grid-cols-1"> 
        <section class="w-full h-full px-4 flex items-center justify-center flex-col max-lg:px-0 ">
            <a href="/servicios" class="w-full h-auto cursor-grabbing flex items-center justify-center">
                <img src="/logo/an-house-logo.webp" alt="Logo AnHouse Propiedades" class="w-auto h-full" transition:name="t-Logo" transition:animate="fade"/>
            </a>
            
        </section>
        <section class="px-4 flex items-center justify-center">
            <Nav/>
        </section>
    </main>
</div>
<style>
    *{
        font-family: Aboreto;
    }
</style>