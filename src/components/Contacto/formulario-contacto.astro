<div class="w-full h-screen py-30 bg-transparent mask-l-from-96% to-100% rounded-lg shadow-md cols-span-1 flex flex-col gap-4 justify-start items-center max-sm:py-4 max-md:py-22 text-[#f9f6ee] max-2xl:py-25">
            
            <form action="https://formsubmit.co/tu-correo@example.com" method="POST" class="flex flex-col gap-4  max-w-md">
            <!-- Nombre del cliente -->
             <label for="nombre" class="font-extralight text-2xs lg:text-2xl">nombre*</label>
            <input id="nombre" type="text" name="nombre" placeholder="Tu nombre completo" required autocomplete="Nombre y apellido" class="w-full h-10 text-2xs bg-transparent border-b-2 border-gray-500 focus:border-amber-400 focus:outline-none  placeholder:text-2xs lg:text-3xl lg:placeholder:text-3xl">

            <!-- Correo -->
             <label for="email" class="font-extralight text-2xs lg:text-2xl">correo*</label>
            <input id="email" type="email" name="email" placeholder="Tu correo" required autocomplete="correo electronico" class="w-full h-10 text-2xs bg-transparent border-b-2 border-gray-500 focus:border-amber-400 focus:outline-none placeholder:text-2xs lg:text-3xl lg:placeholder:text-3xl">

            <!-- Teléfono -->
            <label for="telefono" class="font-extralight text-2xs lg:text-2xl">teléfono*</label>
            <input id="telefono" type="tel" name="telefono" placeholder="Tu teléfono" required pattern="[0-9]{8,15}" title="Ingrese solo números, mínimo 8 dígitos" class="w-full h-10 text-s bg-transparent border-b-2 border-gray-500 focus:border-amber-400 focus:outline-none placeholder:text-2xs lg:placeholder:text-3xl lg:text-3xl " >

            <!-- Tipo de propiedad -->
             <label for="tipo_propiedad" class="font-extralight text-2xs lg:text-2xl">Tipo de Propiedad*</label>
            <select id="tipo_propiedad" name="tipo_propiedad" required class="w-full h-8 text-2xs bg-transparent border-b-2 border-gray-500 text-gray-400  focus:border-amber-400 focus:outline-none placeholder:text-2xs lg:placeholder:text-2xl lg:text-2xl before:focus:text-white">
                <option value="">Seleccione tipo de propiedad</option>
                <option value="departamento">Departamento</option>
                <option value="casa">Casa</option>
                <option value="terreno">Terreno</option>
                <option value="oficina">Oficina</option>
            </select>
